{{define "title"}}Dashboard{{end}}
{{define "head"}}{{end}}
{{define "content"}}
    <h2 class="display-4 mb-3">Courses <a href="/admin/course/create" class="btn btn-success btn-sm px-3">New</a></h2>
    <hr>
    <div class="row">
        <!-- TODO Brede : only show active courses -->
        {{ range .Courses.Items }}
            <div class="col-12 col-md-6 col-xl mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="display-4">{{ .Code }}</h2>
                        <h3 class="mb-3">{{ .Name }}</h3>
                        <hr>
                        <a href="/course/?id={{ .ID }}" class="btn btn-outline-dark">See Course</a>
                        <a href="/admin/course/{{.ID}}/assignments" class="btn btn-outline-dark">See Assignments</a>
                    </div>
                </div>
            </div>
        {{ end }}
    </div>

    <h2 class="display-4 mb-3">Assignments <a href="/admin/assignment/create"
                                              class="btn btn-success btn-sm px-3">New</a></h2>
    <hr>
    <div class="row">
        <!-- TODO Brede : only show active assignments -->
        {{range .Assignments}}
            <div class="col-12 col-md-6 col-lg-4 mb-3">
                <div class="card shadow-sm{{if DEADLINEDUE .Deadline}} bg-secondary text-light{{end}}">
                    <div class="card-body">
                        <h2 class="display-5">{{.Name}}</h2>
                        <h5><span class="badge {{if DEADLINEDUE .Deadline}}badge-dark{{ else}} badge-secondary{{end}}">COURSE_CODE</span>
                        </h5>
                        <p{{if DEADLINEDUE .Deadline}} class="text-danger"{{end}}>
                            <strong>Deadline: </strong> {{PRETTYTIME .Deadline}}</p>
                        <hr class="bg-light">
                        <a href="/admin/assignment/{{.ID}}"
                           class="btn btn-outline-{{if DEADLINEDUE .Deadline}}light{{else}}dark{{end}} btn-sm">See
                            details</a>
                    </div>
                </div>
            </div>
        {{end}}
    </div>
{{end}}
{{define "foot"}}
{{end}}